<div id="post-{{id}}" style="width: 24rem" class = "card">
    <img class="card-image" src="{{thumbnail}}" alt="Missing Image">
    <div class="card-body">
        <p class="card-title">{{title}}</p>
        <p class="card-text">{{description}}</p>
        <a href="/post/{{id}}" class="anchor-buttons">Post Details</a>
    </div>
</div>
